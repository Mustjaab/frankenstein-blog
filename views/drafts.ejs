<!DOCTYPE html>
<html>
<head>
    <title>Drafts - Modern Prometheus</title>
    <link rel="stylesheet" href="/css/style.css">
    <style>
        .drafts-container {
            max-width: 800px;
        }
        .draft-item {
            background: #2d2d2d;
            border-left: 4px solid #d4af37;
            padding: 20px;
            margin: 15px 0;
            border-radius: 0 8px 8px 0;
        }
        .draft-actions {
            margin-top: 15px;
            display: flex;
            gap: 10px;
        }
        .btn {
            padding: 8px 15px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            text-decoration: none;
            display: inline-block;
            font-size: 0.9em;
        }
        .btn-edit {
            background: #d4af37;
            color: black;
        }
        .btn-delete {
            background: #8b0000;
            color: white;
        }
        .empty-state {
            text-align: center;
            padding: 40px;
            color: #888;
        }
        .last-saved {
            color: #888;
            font-size: 0.9em;
            margin-top: 5px;
        }
    </style>
</head>
<body>
    <div class="drafts-container">
        <header>
            <h1>‚ö° Drafts</h1>
            <a href="/" class="back-link">‚Üê Back to Blog</a>
            <a href="/new-post" class="new-post-btn">+ New Article</a>
        </header>

        <% if (typeof drafts !== 'undefined' && drafts.length > 0) { %>
            <% drafts.forEach(draft => { %>
                <div class="draft-item">
                    <h3><%= draft.title || 'Untitled Draft' %></h3>
                    <p class="excerpt"><%= draft.excerpt || 'No excerpt yet...' %></p>
                    <div class="last-saved">Last saved: <%= draft.lastSaved %></div>
                    <div class="draft-actions">
                        <a href="/new-post?draft=<%= draft.id %>" class="btn btn-edit">‚úèÔ∏è Continue Editing</a>
                        <form action="/delete-draft/<%= draft.id %>" method="POST" style="display: inline;">
                            <button type="submit" class="btn btn-delete" onclick="return confirm('Delete this draft?')">üóëÔ∏è Delete</button>
                        </form>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <div class="empty-state">
                <h3>No drafts yet</h3>
                <p>Start writing a new article and save it as a draft!</p>
                <a href="/new-post" class="btn" style="background: #8b0000; color: white; margin-top: 10px;">Start Writing</a>
            </div>
        <% } %>
    </div>
</body>
</html>